# Makefile 'school' executable file

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
RM = rm -f
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
        $(CC) $(CLFLAGS) $(OBJ) -o $(NAME)
clean:
        $(RM) *~ $(NAME)
oclean:
        $(RM) $(OBJ)
fclean: clean oclean
re: fclean all

